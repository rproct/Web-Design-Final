---
interface Props {
  json: {
    name: string;
    sites: {
      name: string;
      link: string;
    }[];
  };
}

const { json } = Astro.props;
---

<div>
  <h3 class="text-center">{json.name}</h3>
  <div class="dropdown">
    <a
      class="btn btn-lg dropdown-toggle"
      href="#"
      role="button"
      id="dropdownMenuLink"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      Click to display {json.name}
    </a>

    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      {
        json.sites.map((site) => (
          <li>
            <a class="dropdown-item" href={site.link}>
              {site.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
