---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "";
---

<BaseLayout title={title}>
  <div id="donatePanel">
    <div id="black-box">
      <h1 class="text-center" id="display">Donate</h1>
      <div class="input-group">
        <span class="input-group-text">$</span>
        <input dir="rtl" type="number" class="form-control" placeholder="USD" />
      </div>
      <div class="d-flex justify-content-between py-5">
        <button
          class="btn donateBtn"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"><h4>Once</h4></button
        >
        <button
          class="btn donateBtn"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"><h4>Monthly</h4></button
        >
      </div>
    </div>
  </div>
</BaseLayout>
